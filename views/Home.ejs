<% -include("partials/header.ejs") %>
    <h1>Home page</h1>
    <form method="POST" action="/url">
      <label>Original URL</label>
      <input
        type="text"
        class="text"
        name="redirectURL"
        placeholder="Enter Original url"
        required
      />

      <input type="submit" />
    </form>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Short URL</th>
          <th>Original URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% allURL.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <a href="/url/<%= url.shortId %>" target="_blank">
              <%= url.shortId %>
            </a>
          </td>
          <td><%= url.redirectURL %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    
    <a href="/logOff"><button>LogOff</button></a>
  </body>
</html>
